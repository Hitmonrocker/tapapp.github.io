<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rdiogroup" />

    <RadioButton android:id="@+id/bluetooth"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:text="\tVibration"
                 android:textSize="40dp"
                 android:textStyle="bold"
                 android:background="#ffffff"
                 android:textColor="#0266c9"
                 android:paddingTop="5dp"
                 android:layout_marginTop="35dp"
                 android:layout_below="@+id/imageView" android:layout_alignLeft="@+id/music"/>

    <RadioButton android:id="@+id/music"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:paddingTop="5dp"
                 android:text="\tMusic"
                 android:textSize="40dp"
                 android:textStyle="bold"
                 android:textColor="#0266c9"
                 android:layout_below="@+id/bluetooth"
                 android:layout_marginTop="10dp"
                 android:layout_alignLeft="@+id/appSwitch"/>

    <RadioButton android:id="@+id/appSwitch"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="#ffffff"
                 android:text="\tApp Switcher"
                 android:textSize="40dp"
                 android:textStyle="bold"
                 android:layout_marginTop="10dp"
                 android:textColor="#0266c9"
                 android:paddingTop="5dp"
                 android:layout_below="@+id/music"
                 android:layout_alignLeft="@+id/appSwitch"/>

    <RadioButton android:id="@+id/rejectCall"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:background="#ffffff"
                 android:text="\tReject Calls"
                 android:textSize="40dp"
                 android:textStyle="bold"
                 android:textColor="#0266c9"
                 android:paddingTop="5dp"
                 android:layout_below="@+id/appSwitch"
                 android:layout_alignLeft="@+id/appSwitch"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#0266c9"
            android:text=""
            android:id="@+id/openSettings"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/appSwitch"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/imageView"
            android:background="#0266c9"
            android:src="@drawable/ic_launcher_white"
            android:layout_below="@+id/rdiogroup"
            android:layout_alignParentLeft="true"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:src="@drawable/arrow_right"
            android:background="@android:color/transparent"
            android:paddingRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/rejectCall"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_alignParentLeft="true"/>
</RelativeLayout>
